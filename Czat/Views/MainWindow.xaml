<Window x:Class="Czat.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Okienko czatu" Height="600" Width="600" MinWidth="450" MinHeight="450" WindowStartupLocation="CenterScreen">
    <Grid Margin="10" Background="Gray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="120"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <RichTextBox x:Name="MsgView" Grid.Row="1" Grid.ColumnSpan="3" IsReadOnly="True" Block.TextAlignment="Right" Block.LineHeight="6" />
        <TextBox x:Name="TextOfMsg" Grid.Row="2" Grid.Column="0" VerticalContentAlignment="Center" KeyDown="OnKeyDownHandler" Background="{DynamicResource MaterialDesignCheckBoxDisabled}" />
        <Button x:Name="SendMsg" Grid.Row="2" Grid.Column="2" Content="Wyślij" Click="SendMsg_Click" Height="40" VerticalAlignment="Bottom" Style="{StaticResource MaterialDesignSecondaryButton}" FontSize="20" />
        <Button x:Name="ChooseEmot" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" Height="40" VerticalAlignment="Bottom" Width="40" BorderBrush="{x:Null}" BorderThickness="1">
            <StackPanel>
                <Image Source="Resources/Img/ic_insert_emoticon_2x.png"/>
            </StackPanel>
        </Button>

        <Grid Background="#9c27b0" HorizontalAlignment="Stretch" Height="25" Grid.ColumnSpan="3" VerticalAlignment="Stretch">
            <Button x:Name="FileBtn" Content="Plik" HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" Width="60" Style="{StaticResource MaterialDesignPrimaryButton}" FontSize="12"/>
            <Button x:Name="PersonsBtn" Content="Osoby" HorizontalAlignment="Left" Margin="60,0,0,0" VerticalAlignment="Top" Height="25" Width="70" Style="{StaticResource MaterialDesignPrimaryButton}" FontSize="12"/>
        </Grid>
    </Grid>
</Window>
<UserControl x:Class="Czat.Helpers.HeaderUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Czat.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Height="32">
        <Line Stroke="#FFC9C8C8" X1="0" Y1="0" X2="325" Y2="0" StrokeThickness="2" />
        <TextBlock x:Name="HeaderLabel" VerticalAlignment="Center" Margin="20,10,0,6" FontWeight="Bold" Text ="{Binding Title, Mode=OneTime}"/>
        <Line Stroke="#FFC9C8C8" X1="0" Y1="30" X2="325" Y2="30" StrokeThickness="2" />
    </Grid>
</UserControl>

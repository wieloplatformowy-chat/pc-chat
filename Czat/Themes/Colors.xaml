<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="PrimaryBrush" Color="#9C27B0" />
    <SolidColorBrush x:Key="PrimaryForegroundBrush" Color="#FFFFFF" />

    <SolidColorBrush x:Key="SecondaryBrush" Color="#009688" />
    <SolidColorBrush x:Key="SecondaryForegroundBrush" Color="#FFFFFF" />

    <SolidColorBrush x:Key="DefaultBrush" Color="#727272" />
    <SolidColorBrush x:Key="DefaultForegroundBrush" Color="#FFFFFF" />

    <SolidColorBrush x:Key="DarkerBackground" Color="#E0E0E0" />
    
</ResourceDictionary>